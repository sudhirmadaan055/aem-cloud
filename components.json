{
  "components": [
    {
      "componentName": "discoverbibigo",
      "authorableFields": {
        "headerSection": {
          "title": {
            "type": "text",
            "defaultValue": "Know More",
            "description": "Small title displayed above the main heading"
          },
          "mainHeading": {
            "type": "text",
            "defaultValue": "Discover Bibigo",
            "description": "Main heading for the component"
          },
          "description": {
            "type": "richtext",
            "defaultValue": "Bibigo has been featured in numerous media outlets, showcasing our commitment to quality and authenticity.",
            "description": "Description text about Bibigo"
          }
        },
        "cardsSection": {
          "numberOfCards": {
            "type": "dropdown",
            "options": ["1", "2", "3", "4", "5", "6"],
            "defaultValue": "3",
            "description": "Number of cards to display in the grid"
          },
          "cardItems": {
            "type": "multifield",
            "fields": {
              "cardImage": {
                "type": "image",
                "description": "Image for the card (circular/rounded)"
              },
              "cardTitle": {
                "type": "text",
                "defaultValue": "Explore our Recipes",
                "description": "Title for the card"
              },
              "cardDescription": {
                "type": "text",
                "defaultValue": "Learn how Bibigo became the world's leading Korean food brand with passion.",
                "description": "Description text for the card"
              },
              "buttonText": {
                "type": "text",
                "defaultValue": "explore more",
                "description": "Text for the call-to-action button"
              },
              "buttonLink": {
                "type": "link",
                "description": "Link URL for the button"
              },
              "backgroundColor": {
                "type": "colorpicker",
                "defaultValue": "#F2C34E",
                "description": "Background color for the card"
              }
            }
          }
        }
      },
      "uiDescription": "A promotional section featuring a header with title, main heading, and description, followed by a responsive grid of cards. Each card displays an image, title, description, and call-to-action button. The component uses a warm color scheme with rounded corners and modern typography.",
      "businessRequirements": [
        "Responsive design for desktop and mobile",
        "Authorable content for easy updates",
        "Consistent branding with Bibigo colors",
        "Accessible design with proper contrast",
        "SEO-friendly structure"
      ],
      "componentType": "Custom Component",
      "designTokens": {
        "colors": {
          "primaryGreen": "#257A58",
          "darkGreen": "#004122",
          "textGreen": "#003017",
          "yellow": "#F2C34E",
          "white": "#FFFFFF"
        },
        "typography": {
          "headingFont": "Malik Trial",
          "bodyFont": "Averta Std PE"
        },
        "spacing": {
          "sectionPadding": "48px",
          "cardGap": "32px",
          "cardPadding": "32px",
          "textGap": "8px"
        },
        "borderRadius": {
          "card": "64px",
          "image": "80px",
          "button": "16px"
        }
      }
    }
  ]
}
