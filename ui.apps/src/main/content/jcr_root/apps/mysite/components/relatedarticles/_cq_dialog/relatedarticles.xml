<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:dialog"
    jcr:title="Related Articles"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <header
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Header"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <sectionTitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Section Title"
                                name="./sectionTitle"
                                value="Related Articles"/>
                            <sectionDescription
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                fieldLabel="Section Description"
                                name="./sectionDescription"
                                value="Dive deeper into the stories, innovations, and how our products are shaping kitchens, markets, and food culture worldwide."/>
                            <exploreMoreButtonText
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Explore More Button Text"
                                name="./exploreMoreButtonText"
                                value="Explore more"/>
                            <exploreMoreButtonLink
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                fieldLabel="Explore More Button Link"
                                name="./exploreMoreButtonLink"
                                rootPath="/content"/>
                        </items>
                    </header>
                    <articles
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Articles"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <articleItems
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                composite="{Boolean}true"
                                fieldLabel="Article Items">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                    <items jcr:primaryType="nt:unstructured">
                                        <articleTitle
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="Article Title"
                                            name="./articleTitle"
                                            value="Expanding Flavors and Opportunities in Global Markets"/>
                                        <articleDate
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="Publication Date"
                                            name="./articleDate"
                                            value="03 May 2025"/>
                                        <articleCategory
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="Category"
                                            name="./articleCategory"
                                            value="products"/>
                                        <articleImage
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                            fieldLabel="Article Image"
                                            fileNameParameter="./articleImageFileName"
                                            fileReferenceParameter="./articleImageFileReference"
                                            mimeTypes="[image/gif,image/jpeg,image/png,image/webp,image/tiff,image/svg+xml]"
                                            multiple="{Boolean}false"
                                            name="./articleImage"
                                            title="Upload Article Image"/>
                                        <articleLink
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                            fieldLabel="Article Link"
                                            name="./articleLink"
                                            rootPath="/content"/>
                                    </items>
                                </field>
                            </articleItems>
                        </items>
                    </articles>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>